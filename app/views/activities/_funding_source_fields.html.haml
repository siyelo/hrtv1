.fields
  .edit_block
    = f.input :funding_flow_id, :required => false, :label => 'Organization', :collection => @activity.project ? funding_sources_options(@activity.project.in_flows) : [], :input_html => {:class => 'funding_source'}, :hint => "If empty, please select a project first, and/or check the selected project has funding sources.", :input_html => {:class => 'ff_organization'}
    - if @data_response.data_request.spend?
      = f.input :spend, :label => "Spent", :hint => "The total amount, from this source, that you have spent in the past fiscal year, on this activity.", :required => false, :input_html => {:class => 'ff_spend'}
    - if @data_response.data_request.budget?
      = f.input :budget, :label => "Budget", :hint => "The total amount that you are planning to spend in the upcoming fiscal year, from this funding source.", :required => false, :input_html => {:class => 'ff_budget'}

  .preview_block{:style => "display: none;"}

  .manage_block
    = link_to_remove_fields "X", f, :class => 'delete'

:javascript
  update_funding_source_selects();
