- title("Edit Project")

- content_for :sub_nav do
  = render :partial => 'shared/sub_nav_projects'

%h1.main_heading
  Edit Project
  %span= render 'projects/help'
  %span.right
    - link_to "#comments", :class => "regular_link" do
      View Comments

%ul.response-notice
  - @project.validation_errors.each do |error|
    %li= error

= error_messages_for :project,  :header_message  => nil, :message => "Oops, we couldn't save your changes."

- semantic_form_for @project, :url => response_project_path(@response, @project), :html => {:class => "basic_form js_form", :style => "clear: right;"} do |f|
  = render 'form', :f => f

= render 'shared/comments', :comments => @comments
