- title 'Reports'

%h1.main_heading Reports

.first-half
  %h2
    =image_tag "icon_lightning.png", :class => "heading_icon"
    Data Responses
  .dashboard_section
    %ul.admin_reports
      - if current_user.current_data_response
        %li
          %a{ :href => reporter_data_response_path(current_user.current_data_response), :class => "drill_down"}
            Review My Response
            %span.hint Interactive report of your current data response

  %h2
    =image_tag "icon_lightning.png", :class => "heading_icon"
    Districts
  .dashboard_section
    %ul.admin_reports
      %li
        %a{ :href => reports_districts_path, :class => "drill_down"}
          Review District Expenditures and Budgets
          %span.hint Interactive reports
      %li

  %h2
    =image_tag "icon_lightning.png", :class => "heading_icon"
    National
  .dashboard_section
    %ul.admin_reports
      %li
        %a{ :href => reports_country_path, :class => "drill_down"}
          Review National Expenditures and Budgets
          %span.hint Interactive reports
      %li

.second-half
  %h2
    =image_tag "icon_users.png", :class => "heading_icon"
    Users
  .dashboard_section
    %ul
      %li= link_to "Users In My Organization", reporter_report_path('users_in_my_organization')

  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Codes
  .dashboard_section
    %ul
      %li
        - link_to reporter_report_path('all_codes') do
          All Codes
          %span.hint from budget and expenditure classifications screen

- @data_responses.each do |response|
  %br
  %br
  %h1.sub_heading= "Reports for Response: #{response.data_request.title}"

  .first-half
    %h2
      =image_tag "icon_reporter.png", :class => "heading_icon"
      Activities
    .dashboard_section
      %ul.admin_reports
        %li=  link_to "Grouped by NSP", reporter_report_path('activities_by_nsp_budget', :dr_id => response.id)
        %li= link_to "Grouped by All Codes", reporter_report_path('activities_by_all_codes_budget', :dr_id => response.id)

    %h2
      =image_tag "icon_reporter.png", :class => "heading_icon"
      Districts
    .dashboard_section
      %ul.admin_reports
        %li=  link_to "Grouped by NSP", reporter_report_path('districts_by_nsp_budget', :dr_id => response.id)
        %li= link_to "Grouped by All Codes", reporter_report_path('districts_by_all_codes_budget', :dr_id => response.id)

  .second-half
    %h2
      =image_tag "icon_reporter.png", :class => "heading_icon"
      Maps
    .dashboard_section
      .first-half
        %h3 Districts
        %ul
          %li=  link_to "Grouped by NSP", reporter_report_path('map_districts_by_nsp_budget', :dr_id => response.id)
          %li=  link_to "Grouped by All Codes", reporter_report_path('map_districts_by_all_codes_budget', :dr_id => response.id)

      .second-half
        %h3 Facilities
        %ul
          %li N/A
